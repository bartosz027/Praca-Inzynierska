<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Logowanie -->
    <system:String x:Key="EnterEmail_String">Enter your email:</system:String>
    <system:String x:Key="EnterPassword_String">Enter your password:</system:String>

    <system:String x:Key="AutoLogin_String">Remember me</system:String>
    <system:String x:Key="LoginButton_String">Login</system:String>

    <system:String x:Key="ResetPassword_String">Do not you remember the password?</system:String>
    <system:String x:Key="ResetPasswordButton_String">Reset password</system:String>

    <system:String x:Key="NewAccount_String">You dont have an account yet?</system:String>
    <system:String x:Key="NewAccountButton_String">Create new account</system:String>

    <!-- Okrzyki walidacyjne logowanie -->
    <system:String x:Key="InvalidEmailOrPassword_String">Incorrect login details.</system:String>
    <system:String x:Key="AccountNotVerified_String">The account has not been verified.</system:String>

    <!-- Rejestracja -->
    <system:String x:Key="EnterUsername_String">Enter username:</system:String>
    <system:String x:Key="ContinueButton_String">Next</system:String>

    <system:String x:Key="EnterVerificationCode_String">Enter the code sent to your e-mail:</system:String>
    <system:String x:Key="SendVerificationCodeButton_String">Send</system:String>

    <!-- Okrzyki walidacyjne rejestracja -->
    <system:String x:Key="FieldIsEmpty_String">All fields must be completed.</system:String>

    <system:String x:Key="EmailAddressTaken_String">An account with the given e-mail address exists.</system:String>
    <system:String x:Key="InvalidEmailAddress_String">Invalid email format.</system:String>

    <system:String x:Key="InvalidUsername_String">The username must contain between {0} and {1} characters.</system:String>
    <system:String x:Key="InvalidPassword_String">The password must be at least {0} characters long.</system:String>

    <!-- Resetowanie hasła -->
    <system:String x:Key="EnterNewPassword_String">Enter new password:</system:String>
    <system:String x:Key="EnterNewPasswordAgain_String">Enter the new password again:</system:String>

    <!-- Okrzyki walidacyjne resetowanie hasła -->
    <system:String x:Key="AccountNotFound_String">The account with the given e-mail address does not exist.</system:String>
    <system:String x:Key="NotSamePassword_String">The passwords must be identical.</system:String>

    <!-- Okrzyki walidacyjne kod weryfikacyjny -->
    <system:String x:Key="FieldVerificationCodeIsEmpty_String">Enter the verification code.</system:String>
    <system:String x:Key="InvalidVerificationCode_String">Incorrect code.</system:String>
    <system:String x:Key="ExpiredVerificationCode_String">Code expired.</system:String>

