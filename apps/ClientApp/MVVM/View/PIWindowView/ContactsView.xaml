<UserControl x:Class="ClientApp.MVVM.View.PIWindowView.ContactsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientApp.MVVM.View.PIWindowView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
     <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Style="{DynamicResource PIWinodwBottomSector}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Style="{DynamicResource PIWinodwNavigationBar}">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                            Style="{DynamicResource PIWinodwNavigationBarLeft}">

                            <Button Style="{DynamicResource ContactsNavigationButton}">
                                <Image Style="{DynamicResource SearchIcon}"/>
                            </Button>

                        </Border>

                        <Border Grid.Column="1"
                            Style="{DynamicResource PIWinodwNavigationBarRight}">

                            <Button Style="{DynamicResource ContactsNavigationButton}">
                                <Image Style="{DynamicResource AddFriendIcon}"/>
                            </Button>

                        </Border>
                    </Grid>
                </Border>
                <ListBox Grid.Row="1"
                         Background="Yellow">
                    
                </ListBox>
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding FriendList}"
                         SelectedItem="{Binding SelectedFriend}"
                         Background="Transparent"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Hidden"
                         ScrollViewer.CanContentScroll="False"
                         FocusVisualStyle="{x:Null}"
                         BorderBrush="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <RadioButton Content="{Binding Username}"
                                         Style="{DynamicResource UserView}"
                                         IsEnabled="{Binding Status}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
            </Grid>
        </Border>
         
        <Border Grid.Column="1"
                Style="{DynamicResource PIWinodwBottomSector}"
                Margin="10,0,0,0">
            <ContentControl Content="{Binding CurrentView}"/>

        </Border>
    </Grid>
</UserControl>
